#ifndef REFERENCEIMAGE_H_
#define REFERENCEIMAGE_H_

#define size 20

#include "typedefs.h"

class ReferenceImage {
private:
	int8_t imageData[size][size];
public:
	ReferenceImage();
	virtual ~ReferenceImage();
	void draw(uint16_t x, uint16_t y);
	void generateScore(Image *image);
	void correct(Image *image);
	void setScore(uint8_t x, uint8_t y, int8_t value);
	int8_t getScore(uint8_t x, uint8_t y);
};

#endif /* REFERENCEIMAGE_H_ */
