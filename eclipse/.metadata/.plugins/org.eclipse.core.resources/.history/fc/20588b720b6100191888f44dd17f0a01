#ifndef IMAGE_H_
#define IMAGE_H

#include "typedefs.h"
#include <stdlib.h>

class Image {
private:
	uint8_t* imageData;

public:
	uint16_t width;
	uint16_t height;

	Image(uint16_t width, uint16_t height);
	virtual ~Image();

	void setPixel(uint16_t x, uint16_t y, uint8_t value);
	uint8_t getPixel(uint16_t x, uint16_t y);
	void loadImage(const uint8_t data[]);
	void resize(uint16_t newWidth, uint16_t newHeight);
	void Image::createData()
};

void setPixel(uint8_t imageData[], uint16_t x, uint16_t y, uint8_t value);

#endif /* IMAGE_H_ */
